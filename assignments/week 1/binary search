#include<stdio.h>
#include<stdlib.h>

void binary_search(int arr[],int n,int key)
{int c=0;
    int s=0,l=n;
    int i,mid=0;

    while(s<l)
    {   c++;
        mid=(s+l)/2;
        if(arr[mid]==key)
        {
            printf("key found at %d\n",mid);
            printf("comparisons : %d\n",c);
            break;

        }
        else if(arr[mid]>key)
        {
            l=mid-1;

        }
        else if(arr[mid]<key)
        {
            s=mid+1;

        }

    }
    printf("key not found \n");

}

int main()
{
    int n,i;
    printf("enter the number of elements :\n");
    scanf("%d",&n);
    int arr[n];
    printf("enter the elements :\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int key;
    printf("enter the key\n");
    scanf("%d",&key);
    binary_search(arr,n,key);


}
